{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/og.png",
        "destination": "/og.png"
      },
      {
        "source": "/static/**",
        "destination": "/static"
      },
      {
        "source": "/policy",
        "destination": "/policy.html"
      },
      {
        "source": "/term",
        "destination": "/term.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
      
    ]
  }
}
