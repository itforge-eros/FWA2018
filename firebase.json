{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
        "source": "**/*.@(jpg|jpeg|gif|png|svg|ico)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=7200"
        }]
      },
      {
        "source": "service-worker.js",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=0"
        }]
      },
      {
        "source": "*/*.@(js|css)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=3600"
        }]
      },
      {
        "source": "manifest.json",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=7200"
        }]
      }
    ],
    "rewrites": [{
        "source": "/og.png",
        "destination": "/og.png"
      },
      {
        "source": "/static/**",
        "destination": "/static"
      },
      {
        "source": "/policy",
        "destination": "/policy.html"
      },
      {
        "source": "/term",
        "destination": "/term.html"
      },
      {
        "source": "/api/friend",
        "function": "friend"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }

    ]
  }
}